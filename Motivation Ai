<body>

  <div class="chat-container">
    <div class="header">Daily Motivation</div>

    <div class="messages" id="messages"></div>

    <div class="input-area">
      <input id="userInput" placeholder="Type something..." />
      <button onclick="sendMessage()">Send</button>
    </div>
  </div>

  <script>
    const messages = document.getElementById("messages");

    const motivationQuotes = [
      "Believe you can, and you're halfway there.",
      "Small steps every day lead to big results.",
      "You are capable of amazing things.",
      "Stay positive, work hard, make it happen.",
      "Your only limit is your mind.",
      "Every day is a fresh start.",
      "Don't stop until you're proud.",
      "You have the power to create change."
    ];

    function addMessage(text, type) {
      const div = document.createElement("div");
      div.className = type === "bot" ? "bot-message" : "user-message";
      div.textContent = text;
      messages.appendChild(div);
      messages.scrollTop = messages.scrollHeight;
    }

    function sendMessage() {
      const input = document.getElementById("userInput");
      const text = input.value.trim();
      if (!text) return;

      addMessage(text, "user");
      input.value = "";

      // Bot replies with advanced AI-style contextual responses
      setTimeout(() => {
        const lower = text.toLowerCase();
        let reply = "";

        const quote = motivationQuotes[Math.floor(Math.random() * motivationQuotes.length)];

        if (lower.includes("hi") || lower.includes("hello") || lower.includes("hey")) {
          reply = "Hello! ðŸ˜Š I'm fully charged and ready to boost your motivation!";
        } else if (lower.includes("thanks") || lower.includes("thank you")) {
          reply = "Anytime! ðŸ’ª You're making progress, and I'm proud of you.";
        } else if (lower.includes("how are you")) {
          reply = "I'm feeling unstoppable today! âš¡ How about you?";
        } else if (lower.includes("who are you")) {
          reply = "I'm your AI motivation partnerâ€”always here, always positive, always rooting for you!";
        } else if (lower.includes("sad")) {
          reply = "I'm sorry you're feeling this way ðŸ’› But remember: even the strongest storms eventually run out of rain. You're stronger than you think.";
        } else if (lower.includes("tired")) {
          reply = "Itâ€™s okay to feel tired. ðŸŒ™ Even champions need rest. Recharge, and come back even stronger!";
        } else if (lower.includes("stress") || lower.includes("anxiety")) {
          reply = "Take a deep breath with me... inhale ðŸŒ¿ exhale ðŸŒ¿ You're doing the best you can, and that is enough.";
        } else if (lower.includes("motivate") || lower.includes("quote") || lower.includes("help")) {
          reply = quote;
        } else if (lower.includes("why")) {
          reply = "Sometimes you donâ€™t need all the answers. Just trust the journeyâ€”youâ€™re heading somewhere amazing.";
        } else if (lower.includes("can i")) {
          reply = "Yes, you absolutely CAN! ðŸš€ Your potential is bigger than your doubts.";
        } else if (lower.includes("will i")) {
          reply = "If you stay consistent, absolutely YES. The future is cheering for you already!";
        } else {
          reply = quote;
        }

        addMessage(reply, "bot");
      }, 500);
    }
  </script>

